<nav class="navbar navbar-expand-lg mt-2">
    <div class="collapse navbar-collapse" id="navbarEpro">
        <ul class="navbar-nav d-flex justify-content-between w-100">
            {% for page in pages %}
                {% if page.id==1 %}
                    <li class="nav-item">
                        <a href="{{ path("xgsb_fo_home") }}" class="nav-link">Accueil</a>
                    </li>
                {% elseif page.Type.code=="#" %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbar{{ page.slug}}" role="button"
                           data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            {{ page.Title }}
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbar{{ page.slug}}">
                            {% for child in page.childs %}
                                <li><a class="dropdown-item" href="{{ path("xgsb_fo_base_page", {"slug": child.slug})
                                    }}">{{ child.title }}</a></li>
                            {% endfor %}
                        </ul>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a href="{{ path("xgsb_fo_base_page", {"slug": page.slug}) }}" class="nav-link">{{ page.title
                            }}</a>
                    </li>
                {% endif %}
            {% endfor %}
        </ul>
    </div>
</nav>