{% block choosemedia_widget %}
    <div class="input-group mb-3">

        <input type="text" class="form-control" {{ block('widget_attributes') }} value="{{ value }}" readonly>
        <div class="input-group-append">
            <button class="btn btn-secondary btn-choose-media" type="button" data-iid="{{ id }}">
                <span class="icon-flow-children"></span> Parcourir le serveur
            </button>
            <button class="btn btn-outline-danger btn-clear-media" type="button" data-iid="{{ id }}">
                <span class="icon-delete-outline"></span> Vider
            </button>
        </div>
    </div>
    <div class="modal fade" id="CIModal_{{ id }}" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
            </div>
        </div>
    </div>
{% endblock %}
